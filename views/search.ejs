<%- contentFor('body') %>
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Kết quả tìm kiếm</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-search"></i> Kết quả tìm kiếm</h2>
            <p class="text-muted">Từ khóa: "<%= searchQuery %>" - Tìm thấy <%= results.products.length %> sản phẩm</p>
        </div>
    </div>

    <% if (results.products.length > 0) { %>
        <div class="row">
            <% results.products.forEach(product => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text">
                                <strong>Giá:</strong> <%= new Intl.NumberFormat('vi-VN', {style: 'currency', currency: 'VND'}).format(product.price) %><br>
                                <strong>Số lượng:</strong> <%= product.quantity %><br>
                                <strong>Nhà cung cấp:</strong> <%= product.supplier ? product.supplier.name : 'N/A' %>
                            </p>
                            <a href="/products/<%= product._id %>" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <i class="bi bi-search display-1 text-muted"></i>
            <h3 class="mt-3">Không tìm thấy sản phẩm nào</h3>
            <p class="text-muted">Hãy thử lại với từ khóa khác</p>
            <a href="/" class="btn btn-primary">Về trang chủ</a>
        </div>
    <% } %>
</div>