<%- contentFor('body') %>
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Sản phẩm theo nhà cung cấp</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-building"></i> Sản phẩm của <%= supplier.name %></h2>
            <p class="text-muted">
                <strong>Địa chỉ:</strong> <%= supplier.address %><br>
                <strong>Số điện thoại:</strong> <%= supplier.phone %>
            </p>
        </div>
    </div>

    <% if (products.length > 0) { %>
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text">
                                <strong>Giá:</strong> <%= new Intl.NumberFormat('vi-VN', {style: 'currency', currency: 'VND'}).format(product.price) %><br>
                                <strong>Số lượng:</strong> <%= product.quantity %>
                            </p>
                            <a href="/products/<%= product._id %>" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <i class="bi bi-box-seam display-1 text-muted"></i>
            <h3 class="mt-3">Chưa có sản phẩm nào</h3>
            <p class="text-muted">Nhà cung cấp này chưa có sản phẩm nào</p>
            <a href="/" class="btn btn-primary">Về trang chủ</a>
        </div>
    <% } %>
</div>