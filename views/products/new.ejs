<%- contentFor('body') %>
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/products">Sản phẩm</a></li>
                    <li class="breadcrumb-item active">Thêm sản phẩm</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-plus-lg"></i> Thêm sản phẩm mới</h4>
                </div>
                <div class="card-body">
                    <%- include('../partials/flash') %>

                    <form action="/products" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Tên sản phẩm *</label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   value="<%= (formData && formData.name) || '' %>" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="sku" class="form-label">Mã sản phẩm (SKU)</label>
                                    <input type="text" class="form-control" id="sku" name="sku" 
                                           value="<%= (formData && formData.sku) || '' %>" 
                                           placeholder="VD: SP001">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="supplier" class="form-label">Nhà cung cấp *</label>
                                    <select class="form-select" id="supplier" name="supplier" required>
                                        <option value="">Chọn nhà cung cấp</option>
                                        <% suppliers.forEach(supplier => { %>
                                            <option value="<%= supplier._id %>" 
                                                    <%= (formData && formData.supplier === supplier._id.toString()) ? 'selected' : '' %>>
                                                <%= supplier.name %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="price" class="form-label">Giá *</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="price" name="price" 
                                               value="<%= (formData && formData.price) || '' %>" 
                                               min="0" step="1000" required>
                                        <span class="input-group-text">VND</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="quantity" class="form-label">Số lượng *</label>
                                    <input type="number" class="form-control" id="quantity" name="quantity" 
                                           value="<%= (formData && formData.quantity) || '' %>" 
                                           min="0" required>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Mô tả</label>
                            <textarea class="form-control" id="description" name="description" rows="4" 
                                      placeholder="Mô tả chi tiết về sản phẩm"><%= (formData && formData.description) || '' %></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/products" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Lưu sản phẩm
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>