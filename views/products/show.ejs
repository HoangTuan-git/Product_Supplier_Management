<%- contentFor('body') %>
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/products">Sản phẩm</a></li>
                    <li class="breadcrumb-item active"><%= product.name %></li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4><i class="bi bi-box-seam"></i> <%= product.name %></h4>
                    <div>
                        <a href="/products/<%= product._id %>/edit" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>
                        <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" 
                                    onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                                <i class="bi bi-trash"></i> Xóa
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Thông tin cơ bản</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Tên sản phẩm:</strong></td>
                                    <td><%= product.name %></td>
                                </tr>
                                <tr>
                                    <td><strong>Mã SKU:</strong></td>
                                    <td><%= product.sku || 'N/A' %></td>
                                </tr>
                                <tr>
                                    <td><strong>Giá:</strong></td>
                                    <td class="text-success fw-bold">
                                        <%= new Intl.NumberFormat('vi-VN', {style: 'currency', currency: 'VND'}).format(product.price) %>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Số lượng:</strong></td>
                                    <td>
                                        <span class="badge <%= product.quantity <= 5 ? 'bg-danger' : 'bg-success' %>">
                                            <%= product.quantity %>
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>Thông tin nhà cung cấp</h6>
                            <% if (product.supplier) { %>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title"><%= product.supplier.name %></h6>
                                        <p class="card-text">
                                            <i class="bi bi-geo-alt"></i> <%= product.supplier.address %><br>
                                            <i class="bi bi-telephone"></i> <%= product.supplier.phone %>
                                        </p>
                                        <a href="/suppliers/<%= product.supplier._id %>" class="btn btn-outline-primary btn-sm">
                                            Xem chi tiết
                                        </a>
                                    </div>
                                </div>
                            <% } else { %>
                                <p class="text-muted">Chưa có thông tin nhà cung cấp</p>
                            <% } %>
                        </div>
                    </div>

                    <% if (product.description) { %>
                        <hr>
                        <h6>Mô tả sản phẩm</h6>
                        <p><%= product.description %></p>
                    <% } %>
                </div>
                <div class="card-footer text-muted">
                    <small>
                        Ngày tạo: <%= new Date(product.createdAt).toLocaleString('vi-VN') %>
                        <% if (product.updatedAt && product.updatedAt.getTime() !== product.createdAt.getTime()) { %>
                            | Cập nhật: <%= new Date(product.updatedAt).toLocaleString('vi-VN') %>
                        <% } %>
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6><i class="bi bi-graph-up"></i> Thống kê</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Tổng giá trị hàng tồn:</label>
                        <div class="h5 text-primary">
                            <%= new Intl.NumberFormat('vi-VN', {style: 'currency', currency: 'VND'}).format(product.price * product.quantity) %>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Trạng thái kho:</label>
                        <div>
                            <% if (product.quantity > 10) { %>
                                <span class="badge bg-success">Đủ hàng</span>
                            <% } else if (product.quantity > 5) { %>
                                <span class="badge bg-warning">Sắp hết</span>
                            <% } else { %>
                                <span class="badge bg-danger">Hết hàng</span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="bi bi-list-ul"></i> Thao tác</h6>
                </div>
                <div class="card-body d-grid gap-2">
                    <a href="/products" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                    <a href="/products/<%= product._id %>/edit" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Chỉnh sửa
                    </a>
                    <a href="/suppliers/<%= product.supplier ? product.supplier._id : '#' %>" 
                       class="btn btn-info <%= !product.supplier ? 'disabled' : '' %>">
                        <i class="bi bi-building"></i> Xem nhà cung cấp
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>