<%- contentFor('body') %>
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/suppliers">Nhà cung cấp</a></li>
                    <li class="breadcrumb-item active">Thêm nhà cung cấp</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-plus-lg"></i> Thêm nhà cung cấp mới</h4>
                </div>
                <div class="card-body">
                    <%- include('../partials/flash') %>

                    <form action="/suppliers" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Tên nhà cung cấp *</label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   value="<%= (formData && formData.name) || '' %>" 
                                   placeholder="Nhập tên nhà cung cấp" required>
                        </div>

                        <div class="mb-3">
                            <label for="address" class="form-label">Địa chỉ *</label>
                            <textarea class="form-control" id="address" name="address" rows="3" 
                                      placeholder="Nhập địa chỉ đầy đủ" required><%= (formData && formData.address) || '' %></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Số điện thoại *</label>
                            <input type="tel" class="form-control" id="phone" name="phone" 
                                   value="<%= (formData && formData.phone) || '' %>" 
                                   placeholder="0123456789" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   value="<%= (formData && formData.email) || '' %>" 
                                   placeholder="email@example.com">
                        </div>

                        <div class="mb-3">
                            <label for="website" class="form-label">Website</label>
                            <input type="url" class="form-control" id="website" name="website" 
                                   value="<%= (formData && formData.website) || '' %>" 
                                   placeholder="https://example.com">
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Mô tả</label>
                            <textarea class="form-control" id="description" name="description" rows="4" 
                                      placeholder="Mô tả về nhà cung cấp"><%= (formData && formData.description) || '' %></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/suppliers" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Lưu nhà cung cấp
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>