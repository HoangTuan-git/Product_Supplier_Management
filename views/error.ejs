<%- contentFor('body') %>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="mb-4">
                <i class="bi bi-exclamation-triangle-fill display-1 text-warning"></i>
            </div>
            <h1 class="display-4 fw-bold text-dark mb-3"><%= statusCode || 500 %></h1>
            <h2 class="h4 text-muted mb-4"><%= title || 'Có lỗi xảy ra' %></h2>
            <p class="lead text-muted mb-4">
                <%= message || 'Đã xảy ra lỗi không mong muốn. Vui lòng thử lại sau.' %>
            </p>

            <div class="d-flex justify-content-center gap-3 mb-4">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house"></i>
                    Về trang chủ
                </a>
                <button onclick="history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Quay lại
                </button>
            </div>

            <% if (typeof stack !== 'undefined' && stack && process.env.NODE_ENV === 'development') { %>
                <div class="mt-5">
                    <details class="text-start">
                        <summary class="btn btn-link text-muted">Chi tiết lỗi (Development)</summary>
                        <pre class="bg-light p-3 mt-3 rounded text-start"><%= stack %></pre>
                    </details>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.display-1 {
    font-size: 6rem;
}
</style>